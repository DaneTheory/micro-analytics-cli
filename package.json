{
  "name": "micro-analytics",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/micro-analytics/micro-analytics",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "format": "prettier --single-quote --trailing-comma es5 --print-width 100 --write 'packages/**/*.js'",
    "lint": "prettier-check --single-quote --trailing-comma es5 --print-width 100 'packages/**/*.js'",
    "dev": "cd packages/micro-analytics-cli && npm run dev"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^3.6.0",
    "prettier": "^1.4.2",
    "prettier-check": "^1.0.0"
  }
}
